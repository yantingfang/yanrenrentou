        <div class="project-financing project-box" id="project-container">
            <% projects.forEach(function(data, index){ %>
            <div class="pro-finacing clearfix">
                <div class="financing-loading fl clearfix both-margin-<%=index%>">
                    <figure>
                        <a >
                            <img src="<%= data.logo %>">
                        </a>
                        <figcaption>
                            <a class="h-100" href="/dianpu?id=<%= data._id%>">
                                <h3>已筹资</h3>
                            <p>
                                <%=data.raisedfunds %>
                            </p>
                        </a>
                            
                        </figcaption>
                    </figure>
                    <div class="finacing-title clearfix">
                        <a href="" class="fl"><%=data.remarkName %></a>
                    </div>
                    <div class="finacing-progress clearfix fl">
                        <div class="pro-bar bar-100 color-turquoise animated progress" data-pro-bar-percent="<%= (data.raisedfunds/data.wholeMoney)*100%>" data-pro-bar-delay="300">
                            <div class="pro-bar-candy candy-rtl"></div>
                        </div>
                    </div>
                    <p class="proPer fl per"><%= (data.raisedfunds/data.wholeMoney)*100%></p>
                    <p class="fl mar-10">%</p>
                    <div class="finacing-situation clearfix">
                        <div class="whole fl">
                            <span>融资金额</span>
                            <span>￥<%=data.wholeMoney%></span>
                        </div>
                        <div class="single fl">
                            <span>单笔投资</span>
                            <span class="per"><%=data.wholeMoney/data.buyParts%></span>
                        </div>
                        <div class="time fl">
                            <span>认购份数</span>
                            <span><%=data.buyParts%></span>
                        </div>
                    </div>
                </div>
            </div>

            <% }) %>
