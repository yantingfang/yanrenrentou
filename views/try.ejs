<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>Document</title>
</head>

<body>
	<h1>使用bodyParser中间件上传文件</h1>
	<form id="form1" action="/aa" method="post" enctype="multipart/form-data">请选择文件<input type="file" id="file" name="file"><br/><input type="submit" value="上传文件"  >
	</form>
	<output id="result" ></output>
	<script>
function uploadFile() {    
	var formData = new FormData();    
	var files=document.getElementById("file").files;  
	var file=files[0];formData.append('myfile', file);
	var xhr = new XMLHttpRequest();    
	xhr.open('POST','/aa', true);    
	xhr.onload = function(e) {        
		if (this.status == 200) {            
			document.getElementById("result").innerHTML=this.response;        
		}    
	};    
	xhr.send(formData);
}
</script>
</body>
</html>